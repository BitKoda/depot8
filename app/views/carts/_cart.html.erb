<div id="<%= dom_id cart %>">
  <table class="table-auto my-5">
    <% cart.line_items.each do |line_item| %>
      <tr>
        <td class="text-right"><%= line_item.quantity %></td>
        <td>&times;</td>
        <td class="pr-2">
          <%= line_item.product.title %>
        </td>
        <td class="text-right px-2">
          <%= number_to_currency(line_item.total_price) %>
        </td>
      </tr>
    <% end %>
    <tfoot>
      <tr>
        <th class="text-right pr-2 pt-2 py-2" colspan="3">Total:</th>
        <td class="text-right pt-2 font-bold border-t-2 border-black px-2 py-2">
          <%= number_to_currency(cart.total_price) %>
        </td>
      </tr>
    </tfoot>
  </table>

  <%= button_to 'Empty Cart', cart, 
    method: :delete, 
    class: 'ml-4 rounded-lg py-1 px-2 text-white bg-green-600' %>
